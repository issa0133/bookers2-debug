<div class='container'>
  <h1><%= @range %> search for "<%= @word %>"</h1>
  <table class="table">
    <% if @range == "User" %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></th>
            <th><%= user.name %></th>
            <th><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></th>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <thead>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <th><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></th>
            <th><%= link_to book.title, book_path(book) %></th>
            <th><%= book.body %></th>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>